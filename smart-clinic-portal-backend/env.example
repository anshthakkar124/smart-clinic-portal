# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/smart-clinic-portal
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/smart-clinic-portal

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS and password reset links)
CLIENT_URL=http://localhost:3000

# Email Configuration (for password reset and notifications)
# For development with Ethereal Email
ETHEREAL_USER=your-ethereal-username
ETHEREAL_PASS=your-ethereal-password

# For production with Gmail
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-app-password

# For production with SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# PDF Generation
PDF_OUTPUT_PATH=./pdfs
